<div class='container m-5'>
  
  <div class='row'>
    <div class='col-md-4'></div>
    <div class='col-md-4'>
      <img src="../../assets/images/burger03.png" class='img-fluid mx-auto d-block' alt="Burger Drawing">
    </div>
    <div class='col-md-4'></div>
  </div>

  <div class='row'>
    <div class='col-12 text-center mb-3'>
      <h1 class="heading">Eat the Burger!</h1>
    </div>
  </div>

  <div class='row'>
    <div class='col-2'></div>
    <div class='col-4 text-center'>
      {{!-- <h3>Burgers to Eat</h3> --}}
      <ul>
        {{#each burgers}}
          {{#unless this.devoured}}
            <li>
              {{> burgers/devour-burger}}
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class='col-4 text-center'>
      {{!-- <h3>Eaten Burgers</h3> --}}
      <ul>
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
              {{this.name}}
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
    <div class='col-2'></div>
  </div>

  <div class='row my-5'>
    <div class='col-12 text-center'>
      <form class="create-form">
        <div class="form-group">
          {{!-- <label for="bn">Burger Name:</label> --}}
          <input type="text" id="bn" name="name">
        </div>
        <button type="submit" class="btn btn-sm">Submit</button>
        <p class="new_instructions mt-2">Enter a burger you want to eat and click Submit</p>
      </form>
    </div>
  </div>

</div>


